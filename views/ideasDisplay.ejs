<%- include('partials/head') %>

    <%- include('partials/navbar') %>

        <section class='main-content-background main-content-background-display'>

            <h1 class='content-header'>Your Results:</h1>

            <p id='quote-result'>
                <%= quote %>
            </p>


            <ul class='basic-text'><b>These results are based on your search of:
                 <% if(type !=='' ){ %>
                        <li> Type: <%= type %>
                        </li>
                        <% } %>
                            <% if(price !=='' ){ %>
                                <li> Price: <%= price %>
                                        <% } %>
                                </li>
                                <% if(people !=='' ){ %>
                                    <li> People: <%= people %>
                                    </li>
                                    <% } %>
                                        <% if(accessibility !=='' ){ %>
                                            <li> Effort: <%= accessibility %>
                                            </li>
                                            <% } %></b></ul>

            <% if (searchInput==false){ %>

                <p class='basic-text'>It's a random search because you entered no search parameters.</p>

                <% } %>
        </section>

        <section class='sub-content-background sub-content-background-display'>
            <h2 class='sub-header'>What do you want?</h2>
            <a href="javascript:window.location.reload(true)"><button class='button-basic'>Same search</button></a>

            <a href="/ideas"><button class='button-basic'>New Search</button></a>

            <a href="/"><button class='button-basic'>Random search</button></a>

        </section>

        <%- include('partials/footer') %>